        <source-file src="android/plugin/src/main/java/com/saralweb/logging/LogReader.java" target-dir="src/com/saralweb/logging" />
        <source-file src="android/plugin/src/main/java/com/saralweb/logging/SQLBuilder.java" target-dir="src/com/saralweb/logging" />
